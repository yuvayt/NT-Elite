@model IEnumerable<Member>
<h2 style="text-align: center;">Full Members</h2>

<a type="button" class="btn btn-success" asp-controller="Elite" asp-action="Create">
    New
</a>

<div style="margin-top: 20px;">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Birth Place</th>
                <th scope="col">Graduated</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.Gender</td>
                    <td>@member.Dob</td>
                    <td>@member.PhoneNumber</td>
                    <td>@member.BirthPlace</td>
                    <td>@member.IsGraduated</td>
                    <td>
                        <a class="btn btn-info" asp-controller="Elite" asp-action="Edit" asp-route-id="@member.Id">
                            Edit
                        </a>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" data-toggle="modal"
                        data-target="#deleteModal@(member.Id)">
                            Delete
                        </button>

                        <div class="modal fade" id="deleteModal@(member.Id)" tabindex="-1" role="dialog"
                        aria-labelledby="deleteConfirmModal" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Are you sure?</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Do you really want to delete this member: @member.FullName
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <a type="button" class="btn btn-danger" asp-action="Delete"
                                        asp-route-id="@member.Id">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
