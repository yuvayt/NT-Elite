@model MVCAssignment3.Models.Entities.Person

<h2 style="text-align: center;">Create</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" type="text" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" type="text" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <input asp-for="Gender" type="text" class="form-control">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Dob" class="form-label"></label>
                <input asp-for="Dob" type="date" class="form-control">
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" type="number" class="form-control">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirthPlace" class="form-label"></label>
                <input asp-for="BirthPlace" type="text" class="form-control">
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsGraduated" type="checkbox" class="form-check-input">
                <label asp-for="IsGraduated" class="form-check-label">Check if graduated</label>
            </div>
            <button type="submit" class="btn btn-success">Create New</button>
            <a type="button" class="ml-3 btn btn-secondary" asp-action="ListPeople">Back</a>
        </form>
    </div>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}